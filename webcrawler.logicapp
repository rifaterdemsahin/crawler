{
    "definition": {
        "$schema": "https://schema.management.azure.com/providers/Microsoft.Logic/schemas/2016-06-01/workflowdefinition.json#",
        "actions": {
            "For_each": {
                "actions": {
                    "HTTP": {
                        "inputs": {
                            "method": "GET",
                            "uri": "@items('For_each')['Href']"
                        },
                        "runAfter": {},
                        "type": "Http"
                    },
                    "Parse_JSON": {
                        "inputs": {
                            "content": "@body('recursiveCrawl')",
                            "schema": {
                                "items": {
                                    "properties": {
                                        "Href": {
                                            "type": "string"
                                        },
                                        "Text": {
                                            "type": "string"
                                        }
                                    },
                                    "required": [
                                        "Href",
                                        "Text"
                                    ],
                                    "type": "object"
                                },
                                "type": "array"
                            }
                        },
                        "runAfter": {
                            "recursiveCrawl": [
                                "Succeeded"
                            ]
                        },
                        "type": "ParseJson"
                    },
                    "recursiveCrawl": {
                        "inputs": {
                            "body": "@body('HTTP')",
                            "function": {
                                "id": "/subscriptions/1f2dbbd7-69f6-443f-961f-988dbc9ee66a/resourceGroups/wipro/providers/Microsoft.Web/sites/crawlerbasic/functions/mytrigger"
                            }
                        },
                        "runAfter": {
                            "HTTP": [
                                "Succeeded"
                            ]
                        },
                        "type": "Function"
                    }
                },
                "foreach": "@body('Parse_JSON_all_Initial_Links')",
                "runAfter": {
                    "Parse_JSON_all_Initial_Links": [
                        "Succeeded"
                    ]
                },
                "type": "Foreach"
            },
            "Get_Content": {
                "inputs": {
                    "method": "GET",
                    "uri": "@variables('sitename')"
                },
                "runAfter": {
                    "Set_variable": [
                        "Succeeded"
                    ]
                },
                "type": "Http"
            },
            "Parse_JSON_all_Initial_Links": {
                "inputs": {
                    "content": "@body('mytrigger')",
                    "schema": {
                        "items": {
                            "properties": {
                                "Href": {
                                    "type": "string"
                                },
                                "Text": {
                                    "type": "string"
                                }
                            },
                            "required": [
                                "Href",
                                "Text"
                            ],
                            "type": "object"
                        },
                        "type": "array"
                    }
                },
                "runAfter": {
                    "mytrigger": [
                        "Succeeded"
                    ]
                },
                "type": "ParseJson"
            },
            "Set_variable": {
                "inputs": {
                    "name": "sitename",
                    "value": "https://raw.githubusercontent.com/rifaterdemsahin/crawler/master/basicfiletoparse"
                },
                "runAfter": {
                    "sitetocrawl": [
                        "Succeeded"
                    ]
                },
                "type": "SetVariable"
            },
            "mytrigger": {
                "inputs": {
                    "body": "@body('Get_Content')",
                    "function": {
                        "id": "/subscriptions/1f2dbbd7-69f6-443f-961f-988dbc9ee66a/resourceGroups/wipro/providers/Microsoft.Web/sites/crawlerbasic/functions/mytrigger"
                    }
                },
                "runAfter": {
                    "Get_Content": [
                        "Succeeded"
                    ]
                },
                "type": "Function"
            },
            "sitetocrawl": {
                "inputs": {
                    "variables": [
                        {
                            "name": "sitename",
                            "type": "String",
                            "value": "https://raw.githubusercontent.com/rifaterdemsahin/crawler/master/basicfiletoparse"
                        }
                    ]
                },
                "runAfter": {},
                "type": "InitializeVariable"
            }
        },
        "contentVersion": "1.0.0.0",
        "outputs": {},
        "parameters": {},
        "triggers": {
            "Recurrence": {
                "recurrence": {
                    "frequency": "Minute",
                    "interval": 3
                },
                "type": "Recurrence"
            }
        }
    }
}
